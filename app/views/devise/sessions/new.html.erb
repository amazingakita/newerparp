<div class="flex flex-col items-center h-screen overflow-hidden pt-8">
    <div class="w-full p-6 bg-base-200 border-t-4 border-accent rounded-md shadow-md border-top lg:max-w-lg">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
            <div class="field">
              <label class="label">
                    <span class="text-base label-text">Username</span>
              </label>
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full input input-bordered bg-base-300 focus:bg-base-300" %>
            </div>

            <div class="field">
              <label class="label">
                  <span class="text-base label-text">Password</span>
              </label>
              <%= f.password_field :password, autocomplete: "current-password", class: "w-full input input-bordered bg-base-300 focus:bg-base-300" %>
            </div>
            <div>
                <% if devise_mapping.rememberable? %>
                <div class="field pb-4">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
                <%= f.submit "Login", class: "btn btn-block btn-accent" %>
            </div>
        <% end %>
        <div class="pt-8 flex flex-row justify-between place-content-between text-center">
          <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
