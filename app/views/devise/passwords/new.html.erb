<div class="flex flex-col items-center h-screen overflow-hidden pt-8">
    <div class="w-full p-6 bg-base-200 border-t-4 border-accent rounded-md shadow-md border-top lg:max-w-lg">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-4") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
                      
            
            <div class="field pb-2">
              <label class="label">
                    <span class="text-base label-text">Email</span>
              </label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full input input-bordered bg-base-300 focus:bg-base-300" %>
            </div>

            <div>
                <%= f.submit "Send Reset Email", class: "btn pt-2 btn-block btn-accent" %>
            </div>
        <% end %>
        <div class="pt-8 flex flex-row justify-between place-content-between text-center">
          <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
