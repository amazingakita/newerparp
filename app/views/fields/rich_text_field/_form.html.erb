<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>
<div class="field-unit__field">
  <%= f.hidden_field :content, id: f.field_id(field.attribute), value: f.object.content.try(:to_trix_html) || f.object.content %>
  <rhino-editor 
    data-controller="wysiwyg"
    class="h-full max-h-64 overflow-y-auto rhino-editor" 
    accept="image/*"
    input="<%= f.field_id(field.attribute) %>"
    data-blob-url-template="<%= rails_service_blob_url(":signed_id", ":filename") %>"
    data-direct-upload-url="<%= rails_direct_uploads_url %>"
  >
</div>
