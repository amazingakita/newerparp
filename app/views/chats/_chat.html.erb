<%= turbo_frame_tag @chat, class: "w-screen h-screen" do %>
  <% if !log %>
    <%= turbo_stream_from dom_id(@chat) %>
    <div class="flex flex-row-reverse h-screen overflow-hidden">
        <!-- Sidebar -->
        <div class="w-1/4 bg-base-100 border-r border-neutral">
          <!-- Sidebar Header -->
          <header class="p-4 border-b border-neutral flex justify-between items-center bg-base-200 text-base-content">
            <h1 class="text-2xl font-semibold"></h1>
            <div class="relative">
              <button id="menuButton" class="focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-100" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                  <path d="M2 10a2 2 0 012-2h12a2 2 0 012 2 2 2 0 01-2 2H4a2 2 0 01-2-2z" />
                </svg>
              </button>
              <!-- Menu Dropdown -->
              <div id="menuDropdown" class="absolute right-0 mt-2 w-48 bg-base-100 border border-neutral rounded-md shadow-lg hidden">
                <ul class="py-2 px-3">
                  <li><a href="#" class="block px-4 py-2 text-neutral-content hover:text-gray-400">Option 1</a></li>
                  <li><a href="#" class="block px-4 py-2 text-neutral-content hover:text-gray-400">Option 2</a></li>
                  <!-- Add more menu options here -->
                </ul>
              </div>
            </div>
          </header>
        
          <!-- User List -->
          <div class="overflow-y-auto h-screen p-3 mb-9 pb-20">
            <%= render "layouts/theme_select" %>
            <% if !@online_chat_users.empty? %>
              <div class="divider font-black">Online</div>
            <% end %>
            <% @online_chat_users.each do |chat_user| %>
              <div class="flex items-center mb-4 cursor-pointer hover:bg-base-200 p-2 rounded-md">
                <div class="w-12 h-12 bg-base-300 rounded-full mr-3">
                  <img src="<%= "https://placehold.co/200x/666666/#{chat_user.color}.svg?text=#{chat_user.acronym}&font=Lato" %>" alt="User Avatar" class="w-12 h-12 rounded-full">
                </div>
                <div class="flex-1">
                  <h2 class="text-lg font-semibold"><%= chat_user.name %></h2>
                  <p class="text-base-content"><%= chat_user.group %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Main Chat Area -->
        <div class="flex-1 border-r border-neutral">
            <!-- Chat Header -->
            <header class="bg-base-100 p-4 text-base-content">
              <button class="btn btn-secondary" onclick="chat_modal.showModal();modal_top.scrollIntoView(false);"><%= @chat.url %></button>
              <dialog id="chat_modal" class="modal modal-bottom md:w-4/5 sm:modal-middle">
                <div class="modal-box">
                  <div id="modal_top"></div>
                  <% if @chat.group_chat && @chat.group_chat.topic %>
                    <div class="divider">Topic</div>
                    <div class="prose">
                      <%== @chat.group_chat.topic.bbcode_to_html %>
                    </div>
                  <% end %>
                  <% if @chat.group_chat && @chat.group_chat.description %>
                    <div class="divider">Description</div>
                    <div class="prose">
                      <%== chat.group_chat.description.bbcode_to_html %>
                    </div>
                  <% end %>
                </div>
                <form method="dialog" class="modal-backdrop">
                  <button>close</button>
                </form>
              </dialog>
            </header>
            
            <!-- Chat Messages -->
            <div id="messages" data-controller="autoscroll" class="h-screen flex flex-col overflow-y-auto p-4 pb-40">
              <div class="flex w-full cursor-pointer">
                <div class="flex bg-base-100 rounded-lg my-1 p-3 gap-3">
                  <p class="text-gray-500"><span class='grow whitespace-pre-wrap'>~~~ <%= link_to log_chat_path(@chat), log_chat_path(@chat), target: "_blank" %> ~~~</span></p>
                </div>
              </div>
              <% @messages.each do |message| %>
                <!-- Incoming Message -->
                <%= render message %>
              <% end %>
            </div>
            
            <!-- Chat Input -->
            <footer class="bg-base-100 border-t border-neutral p-4 absolute bottom-0 w-3/4">
                <div class="flex items-center">
                    <%= render 'messages/form', message: Message.new(chat: @chat) %>
                </div>
            </footer>
        </div>
    </div>
  <% else %>
    <div class="flex "> 
        <!-- Main Chat Area -->
        <div class="">
            <!-- Chat Messages -->
            <div id="messages" data-controller="autoscroll" class="flex flex-col  overflow-y-auto p-4">
              <div class="flex  w-full cursor-pointer">
                <div class="flex bg-base-100 rounded-lg my-1 p-3 gap-3">
                  <p data-controller="colouradjust" class="text-gray-500"><span class='grow whitespace-pre-wrap'>~~~ <%= link_to chat_path(@chat), chat_path(@chat), target: "_blank" %> ~~~</span></p>
                </div>
              </div>
              <% @messages.each do |message| %>
                <!-- Incoming Message -->
                <%= render message %>
              <% end %>
            </div>
        </div>
    </div>
  <% end %>
<% end %>
