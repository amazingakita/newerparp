<div class="flex flex-col space-y-4">
    <nav class="navbar p-4 bg-base-300">
        <div class="flex flex-col gap-y-4 join-vertical w-full">
            <%== log_pagy_nav(@calendar[:year]) %>
            <%== log_pagy_nav(@calendar[:month]) %>
            <%== log_pagy_nav(@calendar[:day]) %>
            <%== log_pagy_nav(@pagy) %>
        </div>
    </nav>
    <div class="navbar bg-base-100 p-4">
        <p>
            <%== pagy_info(@pagy) %> for <%== @calendar[:day].label(format: '%B %d, %Y') %>
        </p>
        <div class="navbar-end">
            <%= render "layouts/theme_select" %>
        </div>
    </div>
    <div class="bg-base-100 p-4 text-neutral-content">
        <%= render @chat %>
    </div>
</div>