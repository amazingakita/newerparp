<div id="message-container" class="bg-base-100 bg-global bg-no-repeat bg-fixed bg-cover max-h-screen overflow-auto min-h-screen md-4 flex flex-col">
    <div class="flex flex-col space-y-4 min-h-full grow">
        <div class="opacity-90 text-base-content p-4 min-h-full grow">
            <div class="flex flex-col space-y-4">
                <nav class="navbar p-4 bg-base-300">
                    <div class="flex flex-col md:flex-row gap-y-4 join-vertical w-full gap-4">
                        <div class="w-full md:w-1/2">
                            <%= form_with url: log_chat_path(@chat), method: :get do |form| %>
                                <div class="join w-full">
                                    <%= form.text_field :date_between, class: "join-item px-2 w-full bg-base-200 text-base-content", data: {controller: "datepicker", "datepicker-start-value": "#{@chat.created}", "datepicker-end-value": "#{@chat.last_message}"} %>
                                    <%= form.submit "Submit", class: "btn join-item" %>
                                </div>
                            <% end %>
                        </div>
                        <div class="w-full md:w-1/2">
                            <%== log_pagy_nav(@pagy) %>
                        </div>
                    </div>
                </nav>
                <div class="navbar bg-base-300 p-4">
                    <p>
                        <%== pagy_info(@pagy) %>
                    </p>
                    <div class="navbar-end">
                        <%= render "layouts/theme_select" %>
                    </div>
                </div>
                <div class="h-full w-full">
                    <%= render @chat, log: true %>
                </div>
                <nav>
                    <div class="flex flex-col md:flex-row gap-y-4 join-vertical w-full gap-4">
                        <div class="w-full">
                            <%== log_pagy_nav(@pagy) %>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>

