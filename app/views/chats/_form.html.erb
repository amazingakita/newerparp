<div class="flex flex-col items-center h-screen overflow-hidden pt-8">
    <div class="w-full p-6 bg-base-200 border-t-4 border-accent rounded-md shadow-md border-top lg:max-w-lg">
        <%= form_with(model: chat, class: "space-x-4") do |f|%>     
            <div class="field pb-4">
              <label class="label">
                    <span class="text-base label-text">URL</span>
              </label>
              <%= f.text_field :url, autofocus: true, autocomplete: "chat-url", class: "w-full input input-bordered bg-base-300 focus:bg-base-300" %>
            </div>
            <div>
                <%= f.submit "Create Chat", class: "btn btn-block btn-accent" %>
            </div>
        <% end %>
    </div>
</div>
